<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuishpeStheevenProgreso2.MainPage">

    <StackLayout Margin="20">
        <Label Text="Bienvenido a la aplicacion de Stheeven Quishpe"
               FontSize="60"
               FontFamily="Arial"
               HorizontalOptions="Center"/>


        <Image
            Source="image.png"
            HeightRequest="185"
            Aspect="AspectFit"
            Margin="0,0,0,20" />
        

        <Button
            x:Name="Chistes"
            Text="Chistes"
            Clicked="Chistes_Clicked"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Margin="0,0,0,10" />
       

        <Button
            x:Name="About"
            Text="About"
            Clicked="About_Clicked"
            HorizontalOptions="Center"
            VerticalOptions="Center"/>

    </StackLayout>

</ContentPage>
